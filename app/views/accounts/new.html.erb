<div class="container user-form">
	<div class="row"> 
		<div class="col-xs-12 col-md-6 col-md-offset-3">
			<%= simple_form_for @account, defaults: { wrapper_html: { class: 'row form-field'}, label_html: { class: 'col-xs-5 col-sm-4' }, input_html: { class: 'col-xs-6' }, error: false } do |f| %>
				<%= f.input :name  %>
				<%= f.input :subdomain %>
				<%= f.input :user_limit %>
				<%= f.submit "Add Account", class: "row btn btn-primary btn-lg col-xs-6 col-xs-offset-5 col-sm-6 col-sm-offset-4" %>
			<% end %>
		</div>
	</div>
</div>