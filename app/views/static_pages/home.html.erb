<% provide(:title, "Home") %>


<!-- If the user isn't logged in, they should be prompted to log in and
	   the logged in user links should not show up. If they are logged in,
	   they should see the user options presented to them. -->
<% if !logged_in? %>
	<div class="jumbotron center">
	  <h1>Please Log In</h1>
	  <p><a class="btn btn-primary btn-lg" href="#" role="button">Log In</a></p>
	</div>
<% else %>
	<div class="home-links container-fluid row">
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
			<%= link_to "View/Edit Your Current Bookings", user_bookings_path(current_user), class: "btn btn-primary btn-lg" %>
			<%= link_to "Book Manual Wheelchairs", wheelchairs_path, class: "btn btn-primary btn-lg" %>
			<%= link_to "Book Power Wheelchairs", powerchairs_path, class: "btn btn-primary btn-lg" %>
			<%= link_to "Book Scooters", scooters_path, class: "btn btn-primary btn-lg" %>
			<%= link_to "Book Mattresses", mattresses_path, class: "btn btn-primary btn-lg" %>
			<%= link_to "Book Other Equipment", others_path, class: "btn btn-primary btn-lg" %>
			<% if admin? %>
				<div class="admin-options">
					<p>ADMIN OPTIONS</p>
					<%= link_to "Manage Users", users_path, class: "btn btn-primary btn-lg" %>
					<%= link_to "Manage Manual Wheelchairs", wheelchairs_path, class: "btn btn-primary btn-lg" %>
					<%= link_to "Manage Power Wheelchairs", powerchairs_path, class: "btn btn-primary btn-lg" %>
					<%= link_to "Manage Scooters", scooters_path, class: "btn btn-primary btn-lg" %>
					<%= link_to "Manage Mattresses", mattresses_path, class: "btn btn-primary btn-lg" %>
					<%= link_to "Manage Other Equipment", others_path, class: "btn btn-primary btn-lg" %>
				</div>
			<% end %>
		</div>
	</div>
<% end %>



