<% provide(:title, "Home") %>

<% if !logged_in? %>
	<div class="jumbotron center">
	  <h1>Please Log In</h1>
	  <p><a class="btn btn-primary btn-lg" href="/login" role="button">Log In</a></p>
	</div>
<% else %>
	<div class="home-links container-fluid row">
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
			<%= link_to "View Your Current Bookings", user_bookings_path(current_user), class: "btn btn-primary btn-lg" %>
			<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  			<div class="panel-heading row" role="tab" id="headingOne">
	        <a class="collapsed btn btn-primary btn-lg col-xs-12" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
	          Book Equipment
	          <span class="caret"></span>
	        </a>
  			</div>
  			<div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
    			<div class="list-group row">
		        <li><%= link_to "Book Manual Wheelchairs", wheelchairs_path, class: "btn btn-primary btn-lg option col-xs-12" %></li>
		        <li><%= link_to "Book Power Wheelchairs", powerchairs_path, class: "btn btn-primary btn-lg option col-xs-12" %></li>
					  <li><%= link_to "Book Scooters", scooters_path, class: "btn btn-primary btn-lg option col-xs-12" %></li>
					  <li><%= link_to "Book Mattresses", mattresses_path, class: "btn btn-primary btn-lg option col-xs-12" %></li>
					  <li><%= link_to "Book Other Equipment", others_path, class: "btn btn-primary btn-lg option col-xs-12" %></li>
		      </div>
  			</div>
			</div>
		</div>
	</div>
	<div class="admin-options home-links container-fluid row" >
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3" id="admin-links">
		<% if admin? %>
			<h2>ADMIN OPTIONS</h2>
			<%= link_to "Manage Users", users_path, class: "btn btn-primary btn-lg" %>
			<div class="panel-group" id="accordion1" role="tablist" aria-multiselectable="true">
  			<div class="panel panel-default" id="manage-equipment">
    			<div class="panel-heading row" role="tab" id="headingTwo">
		        <a class="collapsed btn btn-primary btn-lg col-xs-12" data-toggle="collapse" data-parent="#accordion1" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
		          Manage Equipment
		          <span class="caret"></span>
		        </a>
    			</div>
    			<div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
      			<div class="list-group row">
			        <li><%= link_to "Manage Manual Wheelchairs", wheelchairs_path, class: "btn btn-primary btn-lg option col-xs-12" %></li>
			        <li><%= link_to "Manage Power Wheelchairs", powerchairs_path, class: "btn btn-primary btn-lg option col-xs-12" %></li>
						  <li><%= link_to "Manage Scooters", scooters_path, class: "btn btn-primary btn-lg option col-xs-12" %></li>
						  <li><%= link_to "Manage Mattresses", mattresses_path, class: "btn btn-primary btn-lg option col-xs-12" %></li>
						  <li><%= link_to "Manage Other Equipment", others_path, class: "btn btn-primary btn-lg option col-xs-12" %></li>
			      </div>
    			</div>
  			</div>
			</div>
		<% end %>
		</div>
	</div>
<% end %>



