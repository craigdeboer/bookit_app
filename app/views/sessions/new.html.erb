<div class="container user-form">
	<div class="row"> 
		<div class="col-xs-12 col-md-6 col-md-offset-3">
			<%= simple_form_for :session, url: login_path, defaults: { wrapper_html: { class: 'row form-field'}, label_html: { class: 'col-xs-4 col-lg-3' }, input_html: { class: 'col-xs-6' }, error: false } do |f| %>
				<%= f.input :name %>
				<%= f.input :password %>
				<%= f.submit "Log In", class: "submit-button row btn btn-primary btn-lg col-xs-6 col-xs-offset-4 col-lg-6 col-lg-offset-3" %>
			<% end %>
		</div>
	</div>
</div>