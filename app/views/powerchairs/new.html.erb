<h1>This is the new powerchair form.</h1>

<%= simple_form_for @powerchair do |f| %>
	<%= f.input :manufacturer %>
	<%= f.input :model_type, label: "Model" %>
	<%= f.input :drive, label: "Drive Wheel", collection: ["Mid", "Rear", "Front"] %>
	<%= f.input :color %>
	<%= f.input :inventory_tag %>
	<%= f.input :serial_number %>
	<%= f.submit "Add Power Chair" %>
<% end %>