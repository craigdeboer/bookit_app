<div class="new-user container-fluid">
	<div class="row"> 
		<div class="col-md-6 col-md-offset-2">
			<%= simple_form_for @user, defaults: { wrapper_html: { class: "row form-field"} } do |f| %>
				<%= f.input :id, as: :hidden, value: @user.id %>
				<%= f.input :name, label_html: { class: "col-md-4" }, input_html: { class: "col-md-8" } %>
				<%= f.input :initials, label_html: { class: "col-md-4" }, input_html: { class: "col-md-8" } %>
				<%= f.input :email, label_html: { class: "col-md-4" }, input_html: { class: "col-md-8" } %>
				<%= f.input :password, label_html: { class: "col-md-4" }, input_html: { class: "col-md-8" } %>
				<%= f.input :password_confirmation, label: "Confirmation", label_html: { class: "col-md-4" }, input_html: { class: "col-md-8" } %>
				<div class="row form-field">
					<p class="col-md-12">Do you want this user to have admin priviledges?</p>
				</div>
				<%= f.input :admin, label: false, as: :radio_buttons, wrapper_html: { id: "admin-radio" } %>
				<%= f.button :submit, "Edit User", class: " row btn btn-primary btn-lg col-md-4 col-md-offset-4" %>
			<% end %>
		</div>
	</div>
</div>
