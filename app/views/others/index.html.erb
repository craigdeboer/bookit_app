<div id="oindex">
<% show_location = location? %>
<% show_inventory = inventory? %>
<table id="others">
	<thead>
		<tr>
			<th>Manufacturer</th>
			<th>Model</th>
			<%= content_tag(:th, "Location") if show_location %>
			<%= content_tag(:th, "Inventory Tag") if show_inventory %>
			<th>Description</th>
			<th></th>
			<% if admin? %>
				<th></th>
				<th></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @others.each do |other| %>
			<tr>
				<td><%= other.manufacturer %></td>
				<td><%= other.model_type %></td>
				<%= content_tag(:td, other.location) if show_location %>
				<%= content_tag(:td, other.inventory_tag) if show_inventory %>
				<td><%= other.description %></td>
				<td><%= link_to "View/ Book", new_other_booking_path(other), class: "btn btn-primary btn-sm" %></td>
				<% if admin? %>
					<td><%= link_to "edit", edit_other_path(other) %></td>
					<td><%= link_to "delete", other, method: :delete, data: { confirm: "You sure?"} %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
</div>
<% if admin? %>
	<div class="container-fluid row">
	<%= link_to "Add New Equipment", new_other_path, class: "submit-button btn btn-primary btn-lg col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4" %>
	</div>
<% end %>
