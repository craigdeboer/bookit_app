<table id="others">
	<thead>
		<tr>
			<th class="hidden-xs">Manufacturer</th>
			<th>Model</th>
			<th class="hidden-xs">Inventory Tag</th>
			<th>Description</th>
			<th></th>
			<% if admin? %>
				<th></th>
				<th></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @others.each do |other| %>
			<tr>
				<td class="hidden-xs"><%= other.manufacturer %></td>
				<td><%= other.model_type %></td>
				<td class="hidden-xs"><%= other.inventory_tag %></td>
				<td><%= other.description %></td>
				<td><%= link_to "View/ Book", new_other_booking_path(other), class: "btn btn-primary btn-sm" %></td>
				<% if admin? %>
					<td><%= link_to "edit", edit_other_path(other) %></td>
					<td><%= link_to "delete", other, method: :delete, data: { confirm: "You sure?"} %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
<% if admin? %>
	<div class="container-fluid row">
	<%= link_to "Add New Equipment", new_other_path, class: "submit-button btn btn-primary btn-lg col-xs-6 col-xs-offset-3 col-lg-6 col-lg-offset-3" %>
	</div>
<% end %>
