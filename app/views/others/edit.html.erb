
<div class="container equipment-form">
	<div class="row"> 
		<div class="col-xs-12 col-md-6 col-md-offset-2">
			<%= simple_form_for @other, defaults: { wrapper_html: { class: 'row form-field'}, label_html: { class: 'col-xs-6' }, input_html: { class: 'col-xs-6' }, error: false } do |f| %>
			 	<%= f.input :id, as: :hidden, value: @other.id %>
				<%= render 'fields', f: f %>
				<%= f.submit "Save Changes", class: "row btn btn-primary btn-lg col-xs-6 col-xs-offset-2" %>
			<% end %>
		</div>
	</div>
</div>