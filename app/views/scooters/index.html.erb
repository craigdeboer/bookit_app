<div id="sindex">
<table id="scooters">
	<thead>
		<tr>
			<th class="hidden-xs">Manufacturer</th>
			<th>Model</th>
			<th>Wheels</th>
			<th class="hidden-xs">Color</th>
			<th class="hidden-xs">Inventory Tag</th>
			<th>Serial Number</th>
			<th></th>
			<% if admin? %>
				<th></th>
				<th></th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @scooters.each do |scooter| %>
			<tr>
				<td class="hidden-xs"><%= scooter.manufacturer %></td>
				<td><%= scooter.model_type %></td>
				<td><%= scooter.wheels %></td>
				<td class="hidden-xs"><%= scooter.color %></td>
				<td class="hidden-xs"><%= scooter.inventory_tag %></td>
				<td><%= scooter.serial_number %></td>
				<td><%= link_to "View/ Book", new_scooter_booking_path(scooter), class: "btn btn-primary btn-sm" %></td>
				<% if admin? %>
					<td><%= link_to "edit", edit_scooter_path(scooter) %></td>
					<td><%= link_to "delete", scooter, method: :delete, data: { confirm: "You sure?"} %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
</div>
<% if admin? %>
	<div class="container-fluid row">
	<%= link_to "Add New Scooter", new_scooter_path, class: "submit-button btn btn-primary btn-lg col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4" %>
	</div>
<% end %>
